@model ToDo_List_Infrastructure.DTO.UserDTO
<header>
    <link rel="stylesheet" href="~/css/Task.css" asp-append-version="true" />
</header>
<p class="PageHader">Twoje wszystkie zadania użytkowniku @Model.name</p>
@if (Model.tasks.Count() > 0)
{
    @foreach(var oneTask in Model.tasks)
    {
        <div class="ItemBox">
            <div class="BoxElement">
                <p class="TitleText">@oneTask.title</p>
                <a asp-action="Done" asp-controller="Task" asp-route-id="@oneTask.id"><div class="DoneBtn">Zakończ</div></a>
                <a asp-action="Details" asp-controller="Task" asp-route-id="@oneTask.id"><div class="ViewBtn btn">Podgląd</div></a>
                <a asp-action="Delete" asp-controller="Task" asp-route-id="@oneTask.id" ><div class="DeleteBtn btn">Usuń</div></a>
            </div>
        </div>
    }
}else{
    <p class="EmptyTaskList">Niestety nie posiadasz żadnych zadań.</p>
    <p>Możesz je dodać przez panel boczny.</p>
}